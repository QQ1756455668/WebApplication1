@page "/fetchdata"
@using BlazorApp1.Data

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (items == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in items)
            {
                <tr>
                    <td>@forecast.UserName</td>
                    <td>@forecast.ChatText</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Data.ChatRecordTb> items;

    protected override async Task OnInitializedAsync()
    {
        var db=new Data.MySQLContext();
        items = db.ChatRecordTb.ToList();
    }
}
